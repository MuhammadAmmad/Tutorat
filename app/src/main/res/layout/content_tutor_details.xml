<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.example.glenjeffrey"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ca.tutorat.TutorDetails"
    tools:showIn="@layout/activity_tutor_details">

    <RelativeLayout
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/tutorProfilImage"
            android:layout_gravity="center"
            android:src="@drawable/john_doe"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <TextView
            android:id="@+id/tutorFullName"
            android:layout_below="@+id/tutorProfilImage"
            android:textAlignment="center"
            android:textSize="@dimen/titleSize"
            android:text="@string/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/degreeTutor"
            android:layout_below="@+id/tutorFullName"
            android:textAlignment="center"
            android:textSize="@dimen/titleSize"
            android:text="@string/competences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/degreeTutor"
            android:id="@+id/universityTitle"
            android:textAlignment="center"
            android:textSize="@dimen/titleSize"
            android:text="@string/school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:layout_below="@+id/universityTitle"
            android:id="@+id/my_emailTutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <ListView
            android:background="@color/white"
            android:padding="16dp"
            android:layout_below="@+id/my_emailTutor"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewExperience" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:layout_below="@+id/listViewExperience"
            android:id="@+id/userNameTutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_below="@+id/userNameTutor"
            android:id="@+id/my_phone_numberTutor"
            android:inputType="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="613-555-555-555" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_below="@+id/my_phone_numberTutor"
            android:id="@+id/my_postal_codeTutor"
            android:inputType="textPostalAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_postal_code" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
